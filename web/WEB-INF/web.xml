    </servlet>
    <servlet>
        <servlet-name>CompraServlet</servlet-name>
        <servlet-class>agenda.controller.CompraServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarioMultimediaServlet</servlet-name>
        <servlet-class>agenda.controller.UsuarioMultimediaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductoMultimediaServlet</servlet-name>
        <servlet-class>agenda.controller.ProductoMultimediaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendEmailServlet</servlet-name>
        <servlet-class>agenda.controller.SendEmailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmailCompraServlet</servlet-name>
        <servlet-class>agenda.controller.EmailCompraServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AgendaServlet</servlet-name>
        <url-pattern>/AgendaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetalleServlet</servlet-name>
        <url-pattern>/DetalleServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetallesUsuarioServlet</servlet-name>
        <url-pattern>/DetallesUsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OtherUsuarioServlet</servlet-name>
        <url-pattern>/OtherUsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductoServlet</servlet-name>
        <url-pattern>/ProductoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnuncioServlet</servlet-name>
        <url-pattern>/AnuncioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PreguntaServlet</servlet-name>
