<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>AgendaServlet</servlet-name>
        <servlet-class>agenda.controller.AgendaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetalleServlet</servlet-name>
        <servlet-class>agenda.controller.DetalleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>agenda.controller.IndexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetallesUsuarioServlet</servlet-name>
        <servlet-class>agenda.controller.DetallesUsuarioServlet</servlet-class>
        <multipart-config>
            <max-file-size>-1</max-file-size>
            <max-request-size>-1</max-request-size>
            <file-size-threshold>52428800</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>OtherUsuarioServlet</servlet-name>
        <servlet-class>agenda.controller.OtherUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductoServlet</servlet-name>
        <servlet-class>agenda.controller.ProductoServlet</servlet-class>
        <multipart-config>
            <max-file-size>-1</max-file-size>
            <max-request-size>-1</max-request-size>
            <file-size-threshold>52428800</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>AnuncioServlet</servlet-name>
        <servlet-class>agenda.controller.AnuncioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PreguntaServlet</servlet-name>
